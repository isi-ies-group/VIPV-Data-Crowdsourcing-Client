<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.surCO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/IES_blue_main</item>
        <item name="colorPrimaryVariant">@color/IES_blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/IES_yellow_logo</item>
        <item name="colorSecondaryVariant">#F57F17</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Preferences style overriding -->
        <item name="preferenceTheme">@style/Theme.surCO.Preferences</item>
    </style>

    <!-- Light mode application theme. -->
    <style name="Theme.surCO.Light" parent="Theme.surCO">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
    </style>
    
    <style name="Theme.surCO.ActionBar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <!-- Navigation bar color. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.surCO.Preferences" parent="PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextColor">@color/teal_700</item>
        <item name="android:tint">@color/teal_700</item>
    </style>
</resources>